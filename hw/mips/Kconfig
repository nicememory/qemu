    select DS1338
    select HDA
    select PCI_EXPRESS_LS7A1K
    select LOONGSON_I2C
    select LOONGSON_GPIO
    select LOONGSON_IPI
    select LOONGSON_SPI
    select LOONGSON_EXTIOI
    select LOONGSON_PCH_PIC
    select LOONGSON_PCH_MSI
    select FW_CFG_MIPS

